@model IEnumerable<Practice2.Models.EmployeeDataModel>

@{
    ViewBag.Title = "Employees";

}

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6 text-left">
            <h3>Data for all the employees</h3>
        </div>
        <div class="col-6 text-right">
            @Html.ActionLink("Create New Employees", "AddEdit", null, new {@class = "btn btn-primary"})
        </div>
    </div>
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                Employee Id
            </tr>
            <tr>
                Employee Name
            </tr>
            <tr>
                Address
            </tr>
            <tr>
                Department Name
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.EmployeeId
                    </td>
                    <td>
                        @Html.ActionLink(obj.Name, "EmployeeDetails", new {employeeId = obj.EmployeeId})
                    </td>
                    <td>
                        @obj.Address
                    </td>
                    <td>
                        @obj.DepartmentName
                    </td>
                    <td>

                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h3>Sorry, there is no data present in the table</h3>
    }
</div>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-body" id="myModalBodyDiv">


            </div>


        </div>

    </div>

</div>
<div>
    <input type="hidden" id="hiddenEmployeeId"/>


</div>

<script>
    var AddEditEmployee = function (employeeId){
        var url = "Employee/AddEdit?EmployeeId="+employeeId;
        
        $("#myModalBodyDiv").load(url,function (){
            $("#myModal").modal("show");
            
        })
    }
</script>